<?xml version="1.0" encoding="utf-8" ?>
<elements>
	<info>
		<name>Drakewarden Companion</name>
		<description>Companion for the Drakewarden archetype.</description>
		<author url="https://dnd.wizards.com/products/treasury-dragons">Wizards of the Coast</author>
		<update version="0.0.2">
			<file name="drakewarden_companions.xml" url="https://raw.githubusercontent.com/Mathius-gamgee/Aurora/main/drakewarden_companions.xml" />
		</update>
	</info>

	<element name="Small Dragon" type="Companion" source="Fizban's Treasury of Dragons" id="ID_WOTC_FTOD_COMPANION_SMALL_DRAGON">
		<description />
		<setters>
			<set name="strength">16</set>
			<set name="dexterity">12</set>
			<set name="constitution">15</set>
			<set name="intelligence">8</set>
			<set name="wisdom">14</set>
			<set name="charisma">8</set>
			<set name="ac">14 + PB (Natural Armour)</set>
			<set name="hp">5 + five times your ranger level</set>
			<set name="speed">40 ft.</set>
			<set name="languages">Draconic</set>
			<set name="senses">Darkvision 60ft</set>
			<set name="type">Beast</set>
			<set name="size">Small</set>
			<set name="alignment">unaligned</set>
			<set name="challenge">1/8</set>
			<set name="actions">ID_WOTC_FTOD_COMPANION_ACTION_SMALL_DRAGON_BITE,ID_WOTC_FTOD_COMPANION_REACTION_SMALL_DRAGON_INFUSED_STRIKES</set>
		</setters>
		<rules>
			<stat name="companion:ac" value="14" />
			<stat name="companion:hp:max" value="5" bonus="base" />
			<stat name="companion:speed" value="40" bonus="base" />
		</rules>
	</element>
	<element name="Bite" type="Companion Action" source="Fizban's Treasury of Dragons" id="ID_WOTC_FTOD_COMPANION_ACTION_SMALL_DRAGON_BITE">
		<description>
			<p>Melee Weapon Attack: +3 plus PB to hit, reach 5 ft., one target. Hit: 1d6 plus PB piercing damage.</p>
		</description>
		<sheet>
			<description>Melee Weapon Attack: +3 plus PB to hit, reach 5 ft., one target. Hit: 1d6 plus PB piercing damage.</description>
		</sheet>
	</element>
	<element name="Infused Strikes" type="Companion Reaction" source="Fizban's Treasury of Dragons" id="ID_WOTC_FTOD_COMPANION_REACTION_SMALL_DRAGON_INFUSED_STRIKES">
		<description>
			<p>When another creature within 30 feet of the drake that it can see hits a target with a weapon attack, the drake infuses the strike with its essence, causing the target to take an extra 1d6 damage of the type determined by its Draconic Essence.</p>
		</description>
		<sheet>
			<description>When another creature within 30 feet of the drake that it can see hits a target with a weapon attack, the drake infuses the strike with its essence, causing the target to take an extra 1d6 damage of the type determined by its Draconic Essence.</description>
		</sheet>
	</element>
</elements>
